<UserControl x:Class="View.Controls.Constructor.ConstructorItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Controls.Constructor"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             Name="control">
    <Thumb DragDelta="Thumb_DragDelta">
        <Thumb.Template>
            <ControlTemplate>
                <Border Background="LightGray" BorderBrush="Black"
                        BorderThickness="1" CornerRadius="5" Padding="5">
                    <TextBlock Text="{Binding Text, ElementName=control}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Thumb.Template>
    </Thumb>
</UserControl>
