<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Control">
        <Setter Property="Margin" Value="3px"/>
    </Style>
    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="Button">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="25"/>
    </Style>
    <Style x:Key="WideButton" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="Auto"/>
    </Style>
    <Style BasedOn="{StaticResource {x:Type Control}}" TargetType="ProgressBar">
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="1"/>
        <Setter Property="FlowDirection" Value="LeftToRight"/>
    </Style>
</ResourceDictionary>